#!/usr/bin/env ruby

require 'rubygems'
require 'bundler'

Bundler.setup

$LOAD_PATH.unshift(File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib')))
require 'drydock'

module Drydock
  filename = ARGV[0] || 'Drydockfile'
  contents = File.read(filename)

  build do |project|
    project.instance_eval(contents, filename)
  end
end
